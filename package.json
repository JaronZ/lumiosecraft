{
  "name": "lumiosecraft-root",
  "private": true,
  "workspaces": [
    "lumiosecraft",
    "kubejs/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "typecheck": "turbo run typecheck",
    "lint": "eslint kubejs lumiosecraft --ext mjs,js,ts,tsx --fix",
    "format": "prettier --ignore-path=.prettierignore --write \"{lumiosecraft,kubejs}/**/{src,tests,scripts}/**/*.{mjs,ts,js}\"",
    "check-update": "turbo run check-update",
    "test": "vitest run"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@commitlint/types": "^19.8.1",
    "@eslint/js": "^9.26.0",
    "@favware/cliff-jumper": "^6.0.0",
    "@types/node": "^22.15.17",
    "@vitest/coverage-v8": "^3.1.3",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.0",
    "lint-staged": "^15.5.2",
    "prettier": "^3.5.3",
    "tsup": "^8.4.0",
    "turbo": "^2.5.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.0",
    "vite": "^6.3.5",
    "vitest": "^3.1.3"
  },
  "packageManager": "yarn@4.9.1"
}
